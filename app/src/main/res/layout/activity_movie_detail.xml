<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/ivMoviePoster"
        android:src="@drawable/login_button"
        android:layout_marginTop="@dimen/iv_moviePoster_marginTop"
        android:layout_centerHorizontal="true"
        android:layout_width="@dimen/iv_moviePoster_layout_width"
        android:layout_height="@dimen/iv_moviePoster_layout_height" />
    <TextView
        android:id="@+id/tvMovieItemName"
        android:text="MovieName"
        android:layout_marginTop="@dimen/tv_movieName_marginTop"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="@dimen/tv_movie_name_text_size"
        android:layout_below="@+id/ivMoviePoster"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>